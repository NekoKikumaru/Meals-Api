<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Meal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnRandom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Random Meal"
        app:layout_constraintTop_toBottomOf="@id/btnSearch"
        app:layout_constraintBottom_toTopOf="@id/btnCategories"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Meal Categories"
        app:layout_constraintTop_toBottomOf="@id/btnRandom"
        app:layout_constraintBottom_toTopOf="@id/btnFilterCategory"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnFilterCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Categories"
        app:layout_constraintTop_toBottomOf="@id/btnCategories"
        app:layout_constraintBottom_toTopOf="@id/btnFilterArea"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnFilterArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Categories"
        app:layout_constraintTop_toBottomOf="@id/btnFilterCategory"
        app:layout_constraintBottom_toTopOf="@id/btnFilterIngredient"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnFilterIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Categories"
        app:layout_constraintTop_toBottomOf="@id/btnFilterArea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>